<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Delete session"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvWorkoutType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Running"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/tvWorkoutDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Today, 10:30 AM"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWorkoutType"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintHorizontal_bias="0" />

    <LinearLayout
        android:id="@+id/layoutStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWorkoutDate"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintHorizontal_bias="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: "
            android:textSize="12sp"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/tvWorkoutDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.2 km"
            android:textSize="12sp"
            android:textColor="@color/primary_text"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: "
            android:textSize="12sp"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/tvWorkoutCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="320 cal"
            android:textSize="12sp"
            android:textColor="@color/primary_text" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvWorkoutDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45:30"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary_text"
        android:alpha="0.1"
        app:layout_constraintTop_toBottomOf="@id/layoutStats"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>